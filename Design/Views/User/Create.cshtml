@model RoleUserViewModel

@{
    ViewBag.Title = "Create";
}

<h2>@Domain.Resources.Messages.Label_Create</h2>

<form id="FrmCreate" method="post">
    <div class="form-group">
        @Html.LabelFor(AllModel => AllModel._User.FirstName)
        @Html.EditorFor(AllModel => AllModel._User.FirstName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(AllModel => AllModel._User.FirstName, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(AllModel => AllModel._User.SecondName)
        @Html.EditorFor(AllModel => AllModel._User.SecondName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(AllModel => AllModel._User.SecondName, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(AllModel => AllModel._User.UserName)
        @Html.EditorFor(AllModel => AllModel._User.UserName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(AllModel => AllModel._User.UserName, null, new { @class = "text-danger" })
    </div>

