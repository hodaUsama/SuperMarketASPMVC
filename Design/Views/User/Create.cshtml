        @Html.LabelFor(AllModel => AllModel._User.DateOfBirth)
        @Html.EditorFor(AllModel => AllModel._User.DateOfBirth, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(AllModel => AllModel._User.DateOfBirth, null, new { @class = "text-danger" })
    </div>
    
    <div >
        <table>
            <tr>
                <td>
                    @Html.LabelFor(AllModel => AllModel.NotSpecifiedUser)
                </td>
                <td></td>
                <td>
                    @Html.LabelFor(AllModel => AllModel.RolesForSpecifiedUser)
                </td>
            </tr>
            <tr>
                <td>
                 
                    @Html.ListBoxFor(Model => Model.AllSelected, new MultiSelectList(Model.NotSpecifiedUser,
                   "Id","Name", Model.AllSelected),new { size = "6" ,id= "lstAll" })
              
                </td>
                <td>
                    <input id="btnAddAll" type="button" value=">> " />
                    <input id="btnAdd" type="button" value="> "  />
                    <input id="btnRemove" type="button" value="<"   />
                    <input id="btnRemoveAll" type="button" value="<< "  />
                </td>
                <td>
                    @Html.ListBoxFor(Model => Model.SpecifiedSelected, new MultiSelectList(Model.RolesForSpecifiedUser,
                   "Id","Name", Model.SpecifiedSelected),new { size = "6", id = "lstselected" })
                  
                </td>
            </tr>
          </table>

    </div>
  
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-primary" });
</form>
