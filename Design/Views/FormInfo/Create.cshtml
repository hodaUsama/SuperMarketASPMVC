@model Domain.FormInfo
@{
    ViewBag.Title = "Create";
}

<h2>@Domain.Resources.Messages.Label_Create</h2>

<form method="post">
    <div class="form-group">       
        @Html.LabelFor(frm => frm.Name)
        @Html.EditorFor(frm => frm.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(frm => frm.Name, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(frm => frm.Description, new { @class = "" })
        @Html.EditorFor(frm => frm.Description, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(frm => frm.Description, null, new { @class = "text-danger" })
    </div> 
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-primary" });
</form>
